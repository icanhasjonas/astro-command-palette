---
import type {CommandPaletteAction as Props} from '../types';

const {id, href, selected = false} = Astro.props;
---

<a 
  id={id} 
  href={href}
  tabindex="0" 
  target="_blank"
  class="command-palette-action"
  data-selected={selected.toString()}>
  <span>
    <slot />
  </span>
</a>

<style>
  a {
    width: 100%;
    height: 3rem;
    display: flex;
    padding-left: 1rem;
    align-items: center;
    text-decoration: none;
</style>
