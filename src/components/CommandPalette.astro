---
import theme from '../styles/themes/default.module.css';
---

<div id="command-palette-container" class={theme.backdrop}>
  <div id="command-palette" class={theme.palette}>
    <input
      id="command-palette-input"
      autofocus
      placeholder="Search any action"
      class={theme.input}
    />
  </div>
</div>

<style>
  #command-palette-container {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    display: flex;
    position: fixed;
    z-index: 999999;
    align-items: center;
    box-sizing: border-box;
    justify-content: center;
  }

  #command-palette {
    width: 40rem;
    height: 4rem;
    display: flex;
    align-items: center;
  }

  input {
    width: 100%;
    height: 100%;
    border: none;
    background: none;
    padding-left: 1rem;
  }
</style>
