---
import type {CommandPalette as Props} from '../types';
import '../styles/themes/default.css';

const props = Astro.props;
---

<div id="command-palette-container">
  <div id="command-palette">
    <input
      id="command-palette-input"
      autofocus
      placeholder={props.placeholder ?? 'Search anything here'}
    />
    <div id="command-palette-items">
      <slot />
    </div>
  </div>
</div>

<style>
  #command-palette-container {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    display: flex;
    position: fixed;
    z-index: 999999;
    align-items: center;
    box-sizing: border-box;
    justify-content: center;
  }

  #command-palette-items {
    width: 100%;
    overflow-y: auto;
    max-height: 12rem;
  }

  #command-palette-input {
    width: calc(100% - 1rem);
    padding-left: 1rem;
    height: 4rem;
  }

  #command-palette {
    width: 40rem;
    display: flex;
    align-items: center;
    flex-direction: column;
  }
</style>
