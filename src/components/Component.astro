---
import '../styles/themes/default.css';
import Backdrop from './Backdrop.astro';
import Footer from './Footer.astro';
import Header from './Header.astro';
import List from './List.astro';
---

<astro-command-palette
  data-visible="false"
  data-selected="0"
  role="combobox"
  id="command-palette-container">
  <command-palette id="command-palette">
    <Header />
    <List />
    <!--
    <slot name="footer">
      <Footer />
    </slot>
    -->
  </command-palette>
  <Backdrop />
</astro-command-palette>

<script src="../scripts/index.ts"></script>

<style>
  astro-command-palette {
    inset: 0;
    width: 100%;
    height: 100%;
    display: none;
    position: fixed;
    z-index: 999999;
    align-items: center;
    box-sizing: border-box;
    justify-content: center;
  }

  command-palette {
    z-index: 10;
    width: 40rem;
    display: flex;
    align-items: center;
    flex-direction: column;
  }
</style>
