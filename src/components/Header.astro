---
interface Props {
  placeholder?: string;
  maxLength?: number;
}

const {placeholder = 'Search anything here...', maxLength = 60} = Astro.props;
---

<command-palette-header role="searchbox">
  <input
    autocomplete="off"
    name="Command Palette Input"
    placeholder={placeholder}
    maxlength={maxLength}
  />
</command-palette-header>

<style>
  command-palette-header {
    margin-top: -4rem;
    position: fixed;
    width: 40rem;
  }

  input {
    width: calc(100% - 2rem);
    padding-inline: 1rem;
    height: 4rem;
  }
</style>
