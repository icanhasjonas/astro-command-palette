---
import type {CommandPaletteLinkAction as Props} from '../types';

const props = Astro.props;
---

<div
  id={props.id}
  class="command-palette-action"
  data-selected={props.selected?.toString() ?? 'false'}>
  <a
    tabindex="0"
    target="_blank"
    href={props.href}
    class="command-palette-action-link">
    <slot />
  </a>
</div>

<style>
  div {
    width: 100%;
    height: 3rem;
    display: flex;
    align-items: center;
  }

  a {
    padding-left: 1rem;
    text-decoration: none;
  }
</style>
