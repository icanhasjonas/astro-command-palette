---
import type {CommandPaletteLinkAction as Props} from '../types';

const {id, href} = Astro.props;
const selected = Astro.props.selected?.toString() ?? 'false';
---

<a id={id} href={href} tabindex="0" target="_blank" data-selected={selected} class="command-palette-action">
  <slot />
</a>

<style>
  a {
    width: 100%;
    height: 3rem;
    display: flex;
    padding-left: 1rem;
    align-items: center;
    text-decoration: none;
</style>
